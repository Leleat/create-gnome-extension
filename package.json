{
  "name": "create-gnome-extension",
  "version": "0.10.0",
  "description": "Scaffolding tool for GNOME Shell extensions",
  "bin": {
    "create-gnome-extension": "src/index.js"
  },
  "scripts": {
    "test": "vitest run --silent",
    "bump-version": "./scripts/bump-version.js && conventional-changelog -p angular -i CHANGELOG.md -s",
    "check:format": "prettier -c src/ tests/",
    "check:lint": "eslint src/ tests/",
    "hookup": "git config --local core.hooksPath .githooks"
  },
  "files": [
    "template",
    "src"
  ],
  "type": "module",
  "keywords": [
    "GNOME",
    "GNOME Shell",
    "GJS",
    "Extension"
  ],
  "author": "Leleat",
  "license": "GPL-2.0-or-later",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Leleat/create-gnome-extension.git"
  },
  "bugs": {
    "url": "https://github.com/Leleat/create-gnome-extension/issues"
  },
  "homepage": "https://github.com/Leleat/create-gnome-extension",
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@vitest/coverage-v8": "^1.6.0",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-recommended-bump": "^10.0.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.9.0",
    "prettier": "^3.3.3",
    "vitest": "^1.6.0"
  }
}
